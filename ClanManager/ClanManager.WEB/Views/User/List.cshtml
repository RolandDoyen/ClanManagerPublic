@model ClanManager.WEB.Models.User.UserListViewModel
@using ClanManager.Core.Resources
@using ClanManager.Core

@{
    ViewData["Title"] = "User List";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

@if (Model.Users.Any())
{
    <table class="table table-hover table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">@Resources.User_Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                var rowClass = user.IsBanned ? "table-warning" : "";
                rowClass = user.Role == Role.Admin ? "table-success" : rowClass;
                rowClass = user.Role == Role.SuperAdmin ? "table-danger" : rowClass;

                <tr class="@rowClass">
                    <td>
                        <a asp-action="Detail" asp-route-id="@user.Id" class="text-decoration-none text-primary fw-bold">
                            @user.Email
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        @Resources.No_Users_Available
    </div>
}